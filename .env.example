# =============================================================================
# PulmoMed Backend - Variables de Entorno
# =============================================================================
# Copiar este archivo a .env y configurar los valores

# API Settings
API_HOST=127.0.0.1
API_PORT=8000
API_TITLE="PulmoMed API"
API_VERSION=2.1

# -----------------------------------------------------------------------------
# Base de Datos PostgreSQL
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://pulmomed:pulmomed_secret@localhost:5432/pulmomed_db

# -----------------------------------------------------------------------------
# Autenticación JWT
# -----------------------------------------------------------------------------
# ⚠️ CAMBIAR EN PRODUCCIÓN
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# LLM - Groq (para pruebas locales sin GPU)
# -----------------------------------------------------------------------------
# Obtener API key en: https://console.groq.com/keys
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama-3.1-8b-instant
GROQ_TEMPERATURE=0.3
GROQ_MAX_TOKENS=1024

# -----------------------------------------------------------------------------
# LLM - Ollama (para producción con GPU)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TEMPERATURE=0.3
OLLAMA_MAX_TOKENS=512
OLLAMA_TIMEOUT=15.0

# Vector Database
CHROMA_PERSIST_DIR=./knowledge_base/embeddings
COLLECTION_NAME=medical_knowledge

# Embeddings Model (modelo ligero multilingüe)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DEVICE=cpu

# RAG Configuration
RETRIEVAL_TOP_K=5
CHUNK_SIZE=512
CHUNK_OVERLAP=50
RERANK_DISTANCE_THRESHOLD=0.7

# Development
DEBUG=true
LOG_LEVEL=INFO
